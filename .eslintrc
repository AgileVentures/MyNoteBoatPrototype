{
  "env": {
    "node": true, 
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "expo/native"
  ],
  "rules" : {
    "arrow-body-style" : "warn"
  }
}